<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.LoginEmailActivity">


    <RelativeLayout
        android:id="@+id/headerLyout"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:background="@drawable/app_bar"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/logo"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo"/>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/SearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/headerLyout">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="@dimen/_260sdp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:padding="@dimen/_5sdp"
            android:drawableStart="@drawable/icon_search"
            android:drawableEnd="@drawable/ic_filter"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="What are you looking for?"
            android:background="@drawable/search_background"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:ems="10"
            android:text="">

            <requestFocus />
        </AutoCompleteTextView>
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchView"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_list2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_list"/>





</androidx.constraintlayout.widget.ConstraintLayout>